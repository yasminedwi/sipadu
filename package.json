{
  "name": "SIPADU",
  "version": "1.0.0",
  "description": "Aplikasi Sistem Informasi Kepegawaian Terpadu pada Dinas Penanaman Modal dan Pelayanan Terpadu Satu Pintu Kota Kendari",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.sipadu.app",
    "productName": "SIPADU",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "bcryptjs": "^3.0.3",
    "xlsx": "^0.18.5"
  }
}
